NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/shukuma

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Frontend URL (for CORS)
